# Application Environment
NODE_ENV=production
PORT=8083

# Database Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/database-name

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secure-access-secret-key-here-min-256-bits
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here-min-256-bits
JWT_ACCESS_EXPIRATION_TIME=5d
JWT_REFRESH_EXPIRATION_TIME=365d

# Token Configuration
TOKEN_SECRET=your-super-secure-token-secret-key-here-min-256-bits
VERIFY_EMAIL_TOKEN_EXPIRATION_TIME=30m
RESET_PASSWORD_TOKEN_EXPIRATION_TIME=30m

# Authentication
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=1

# OTP Configuration
OTP_EXPIRATION_TIME=30
MAX_OTP_ATTEMPTS=5
ATTEMPT_WINDOW_MINUTES=3

# Bcrypt Configuration
BCRYPT_SALT_ROUNDS=12

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# Client Configuration
CLIENT_URL=https://your-frontend-app.vercel.app

# Backend Configuration
BACKEND_IP=0.0.0.0

# Gemini AI
GEMINI_API_KEY=your-gemini-api-key
