# Application Environment
NODE_ENV=production
PORT=5000
SOCKET=8082

# Database Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/exam-qa-generator

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secure-access-secret-key-here-min-256-bits
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here-min-256-bits
JWT_ACCESS_EXPIRATION_TIME=1d
JWT_REFRESH_EXPIRATION_TIME=30d

# Verify Email and Token
TOKEN_SECRET=your-super-secure-token-secret-key-here-min-256-bits
VERIFY_EMAIL_TOKEN_EXPIRATION_TIME=30m
RESET_PASSWORD_TOKEN_EXPIRATION_TIME=30m

# Authentication Settings
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=2

# OTP Configuration
VERIFY_EMAIL_OTP_EXPIRATION_TIME=30
RESET_PASSWORD_OTP_EXPIRATION_TIME=30
MAX_OTP_ATTEMPTS=5
ATTEMPT_WINDOW_MINUTES=10

# Bcrypt Configuration
BCRYPT_SALT_ROUNDS=12

# Client Configuration
CLIENT_URL=https://your-frontend-app.vercel.app
ADDITIONAL_ORIGINS=https://your-additional-frontend.vercel.app

# Backend Configuration
BACKEND_IP=0.0.0.0

# Google Gemini AI API
GOOGLE_API_KEY=your-google-gemini-api-key

# OpenAI Configuration (if used)
OPENAI_API_KEY=your-openai-api-key

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@flightbooking.com

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=flight-booking-bucket

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Redis Configuration (Optional - for Session Storage and Caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TTL=3600

# Clustering Configuration
CLUSTER_ENABLED=true
MAX_WORKERS=4

# Security Configuration
ENABLE_CORS=true
CORS_ORIGIN=https://your-frontend-app.vercel.app
HELMET_ENABLED=true
XSS_PROTECTION=true
MONGO_SANITIZE=true

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Session Configuration
SESSION_TTL=2592000
SESSION_CLEANUP_INTERVAL=3600000

# Monitoring Configuration
ENABLE_MONITORING=true
MEMORY_THRESHOLD_MB=500
MEMORY_CHECK_INTERVAL=300000

# Development Configuration
DEBUG_MODE=false
VERBOSE_LOGGING=false
